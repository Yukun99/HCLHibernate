<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="me.yukun.hibernate.dtest.Advertisement" table="advertisement">
    <id name="id" column="id">
      <generator class="assigned"/>
    </id>
    <property name="media" column="advertisementMedia"/>
    <property name="cost" column="amountSpent"/>
    <property name="audience" column="noOfAudienceAttracted"/>
  </class>
</hibernate-mapping>